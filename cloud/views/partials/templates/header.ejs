<header class="container">
    <section class="jumbotron header">
        <div class="row">
            <div class="col-xs-2">
                <h2>Your Personal List</h2>
            </div>
            <div class="col-xs-6 col-xs-offset-1">
                <% if (locals.title) { %>
                <h3><%= title %></h3>
                <% } else { %>
                <h3>No Title</h3>
                <% } %>
            </div>
            <div class="col-xs-3">
                <ul class="nav nav-pills">
                    <!--<li role="presentation"><a href="#">Link</a></li>-->
                    <% if (!Parse.User.current()) { %>
                    <li>
                        <a href="/login">Login</a>
                    </li>
                    <li>
                        <a href="/signup">Signup</a>
                    </li>
                    <% } else { %>
                    <li>
                        <a href="#"><%= Parse.User.current().get('username') %></a>
                    </li>
                    <li>
                        <a href="/logout" data-action="post">Logout</a>
                    </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </section>
</header>